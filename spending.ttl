# all payments in year x
#	return payments which occured within year x.
# 	detail the payment.
# /payment/{year}
<#paymentYearList> a api:ListEndpoint ;
		api:uriTemplate "/payment/{year}" ;
            	api:defaultViewer api:describeViewer ;
		api:defaultFormatter api:JsonFormatter ;
		api:variable [
                    a api:Variable ;
                    api:name "inYear";
                    api:value "{year}" ;
                    api:type xsd:integer
                    ];
                api:selector [
                    api:where """ ?item a payment:Payment ;
                                        payment:date ?date ;
                                        payment:totalNetAmount ?amount.
                                   ?date interval:ordinalYear ?inYear.""" ;
                    api:orderBy "DESC(xsd:decimal(?amount))"

                    #api:sort "-Amount" ; # sort doesn't seem to by datatype-able
                    #api:filter "type=Payment&date.ordinalYear={inYear}" ;

                    ] .
		
		
# payments for council x in year y
#	return payments for a given council in a given year
# 	detail the payment
# /payment/{year}/{council}
<#paymentYearCouncilList> a api:ListEndpoint ;
		api:uriTemplate "/payment/{year}/{snac}" ;
		api:defaultViewer api:describeViewer ;
		api:defaultFormatter api:JsonFormatter ;
                api:variable [
                    a api:Variable ;
                    api:name "inYear";
                    api:value "{year}" ;
                    api:type xsd:integer
                    ],
                    [
                    a api:Variable ;
                    api:name "snac_code";
                    api:value "{snac}" ;
                    api:type <http://statistics.data.gov.uk/def/administrative-geography/StandardCode>
                    ];
		api:selector [
		    api:where """?item a payment:Payment ;
				    payment:date ?date ;
				    payment:payer ?c ;
                                    payment:totalNetAmount ?amount.

				?c skos:notation ?snac_code .
				?date interval:ordinalYear ?inYear .
				""" ;
                    api:orderBy "DESC(xsd:decimal(?amount))"
		] .


